<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="15dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Обновить информацию"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/text"
                    android:textSize="22dp"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="40dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Last_name_2"
                        android:layout_width="match_parent"
                        android:inputType="textPersonName"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/text"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:hint="Фамилия"
                        android:textSize="18dp"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="40dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Name_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:hint="Имя"
                        android:textColorHint="@color/text"
                        android:textColor="@color/text"
                        android:textCursorDrawable="@color/text"
                        android:textSize="18dp" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="90dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Last_name_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        android:hint="Отчество"
                        android:textSize="18dp"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:layout_marginLeft="180dp"
                    android:layout_marginTop="90dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Pasport_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        android:hint="Номер паспорта"
                        android:textSize="18dp"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="140dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Money_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        android:hint="Сумма депозита"
                        android:textSize="18dp"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="140dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Persent_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        android:hint="Процент"
                        android:textSize="18dp"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="140dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Plus_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        android:hint="Плюс"
                        android:textSize="18dp"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="190dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Number_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        android:hint="Номер телефона"
                        android:textSize="18dp"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:layout_marginLeft="190dp"
                    android:layout_marginTop="190dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        android:hint="ID"
                        android:textSize="18dp"/>
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:layout_marginLeft="170dp"
                    android:layout_marginTop="240dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Register_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        android:hint="Дата Регистрации"
                        android:textSize="18dp"/>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="240dp">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/Vneseniya_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="@color/text"
                        android:textColorHint="@color/text"
                        android:hint="Дата внесения депозита"
                        android:textSize="18dp"/>
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="300dp"
                    android:id="@+id/Update"
                    android:text="Обновить"
                    android:textSize="18dp"
                    android:background="@drawable/button"
                    android:textColor="@color/text_button"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>